<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.App">

   

    <Application.Resources>

        <ResourceDictionary>
            <Color x:Key="blueColor">#1E90FF</Color>
            <Color x:Key="whiteColor"> #FFFFFF</Color>


            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColor}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>

        <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeBrands">
            <On Platform="Android" Value="FontAwesomeBrandsRegular.otf#Regular" />
        </OnPlatform>

        <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeSolid">
            <On Platform="Android" Value="FontAwesomeSolid.otf#Regular" />
        </OnPlatform>

        <OnPlatform x:TypeArguments="x:String"  x:Key="FontAwesomeRegular">
            <On Platform="Android"  Value="FontAwesomeRegular.otf#Regular" />
        </OnPlatform>
    </Application.Resources>
</Application>